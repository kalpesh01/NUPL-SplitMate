<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">


    <changeSet id="1" author="kalpesh">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="kalpesh">
        <createTable tableName="user_groups">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created_date" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>


    <changeSet id="3" author="kalpesh">
        <createTable tableName="group_members">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="group_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint
                tableName="group_members"
                columnNames="group_id,user_id"
                constraintName="uq_group_user"/>

        <addForeignKeyConstraint
                baseTableName="group_members"
                baseColumnNames="group_id"
                referencedTableName="user_groups"
                referencedColumnNames="id"
                constraintName="fk_groupmembers_group"/>

        <addForeignKeyConstraint
                baseTableName="group_members"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_groupmembers_user"/>
    </changeSet>


    <changeSet id="4" author="kalpesh">
        <createTable tableName="expenses">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(255)"/>

            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>

            <column name="expense_date" type="DATE"/>

            <column name="group_id" type="BIGINT"/>

            <column name="paid_by" type="BIGINT"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="expenses"
                baseColumnNames="group_id"
                referencedTableName="user_groups"
                referencedColumnNames="id"
                constraintName="fk_expense_group"/>

        <addForeignKeyConstraint
                baseTableName="expenses"
                baseColumnNames="paid_by"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_expense_paidby"/>

    </changeSet>


    <changeSet id="5" author="kalpesh">
        <createTable tableName="expense_splits">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="split_amount" type="DOUBLE"/>

            <column name="payment_status" type="VARCHAR(50)"/>

            <column name="expense_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint
                tableName="expense_splits"
                columnNames="expense_id,user_id"
                constraintName="uq_expense_user"/>

        <addForeignKeyConstraint
                baseTableName="expense_splits"
                baseColumnNames="expense_id"
                referencedTableName="expenses"
                referencedColumnNames="id"
                constraintName="fk_split_expense"/>

        <addForeignKeyConstraint
                baseTableName="expense_splits"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_split_user"/>
    </changeSet>

</databaseChangeLog>
