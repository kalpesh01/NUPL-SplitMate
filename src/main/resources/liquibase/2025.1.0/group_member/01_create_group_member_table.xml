<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1" author="nit208">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="group_members"/>
            </not>
        </preConditions>
        <createTable tableName="group_members">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="ref_group" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="ref_user" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint
                tableName="group_members"
                columnNames="ref_group,ref_user"
                constraintName="uq_group_user"/>

        <addForeignKeyConstraint
                baseTableName="group_members"
                baseColumnNames="ref_group"
                referencedTableName="user_groups"
                referencedColumnNames="id"
                constraintName="fk_groupmembers_group"/>

        <addForeignKeyConstraint
                baseTableName="group_members"
                baseColumnNames="ref_user"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_groupmembers_user"/>
    </changeSet>
</databaseChangeLog>